<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit "Update Book" %>
<% end %>
<div class="clearfix">
	<div class ="link"><%= link_to "Show", book_path(@book.id) %></div>
	<p>|</p>
	<div class="link"><%= link_to "Back", books_path %></div>
</div>